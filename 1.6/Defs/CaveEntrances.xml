<Defs>

    <ThingDef ParentName="CaveExit">
        <defName>CavernExit</defName>
        <label>cavern exit</label>
    </ThingDef>

    <ThingDef ParentName="BuildingBase" Name="CavernEntranceBase" Abstract="True">
    <defName>CavernEntranceBase</defName>
    <label>cavern entrance</label>
    <description>A massive, foreboding hole that connects the surface with a network of underground caves. It is possible to climb down into the cavern below. The entrance looks unstable and will collapse in a matter of days.</description>
    <size>(6,6)</size>
    <useHitPoints>false</useHitPoints>
    <thingClass>MiningOverhaul.CavernEntrance</thingClass>
    <tickerType>Normal</tickerType>
    <rotatable>false</rotatable>
    <terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
    <canOverlapZones>false</canOverlapZones>
    <graphicData>
        <graphicClass>Graphic_Single</graphicClass>
        <texPath>Things/Building/PitGate/PitGate</texPath>
        <drawSize>(8,8)</drawSize>
    </graphicData>
    <altitudeLayer>FloorEmplacement</altitudeLayer>
    <passability>Impassable</passability>
    <holdsRoof>true</holdsRoof>
    <destroyable>false</destroyable>
    <building>
        <isEdifice>true</isEdifice>
        <deconstructible>false</deconstructible>
        <isTargetable>false</isTargetable>
        <isInert>true</isInert>
        <claimable>false</claimable>
        <expandHomeArea>false</expandHomeArea>
    </building>
    <portal>
        <traverseSound>TraversePitGate</traverseSound>
    </portal>
    <statBases>
        <Flammability>0</Flammability>
    </statBases>
    <inspectorTabs>
        <li>ITab_ContentsMapPortal</li>
    </inspectorTabs>
    <comps>
        <li Class="CompProperties_LeaveFilthOnDestroyed">
        <filthDef>Filth_LooseGround</filthDef>
        <thickness>5</thickness>
        </li>
    </comps>
    </ThingDef>


    <ThingDef ParentName="CavernEntranceBase">
        <defName>CavernEntrance</defName>
        <label>cavern entrance</label>
        <description>A massive, foreboding hole that connects the surface with a network of underground caves. It is possible to climb down into the cavern below. The entrance looks unstable and will collapse in a matter of days.</description>
        <portal>
            <pocketMapGenerator>cavern</pocketMapGenerator>
            <exitDef>CavernExit</exitDef>
        </portal>
        <inspectorTabs>
            <li>ITab_ContentsMapPortal</li>
        </inspectorTabs>
        <comps>
        <li Class="MiningOverhaul.CompProperties_CavernCreatureSpawner">
            <avoidanceRadius>6</avoidanceRadius>
            <debugMode>false</debugMode>
            <spawnConfigs>
                <!-- Cave Evolution - All creature stages in one config -->
                <li>
                    <label>Cave Evolution</label>
                    <instabilityMultiplier>1.0</instabilityMultiplier>
                    <threatTiers>
                        <!-- Early Stage: Harmless creatures (0-30%) -->
                        <li>
                            <minInstability>0.0</minInstability>
                            <maxInstability>0.3</maxInstability>
                            <maxCreaturesSpawned>2</maxCreaturesSpawned>
                            <spawnIntervalHours>4</spawnIntervalHours>
                            <spawnChance>0.7</spawnChance>
                            <creatures>
                                <li><creatureDef>Rat</creatureDef><weight>3</weight><manhunterChance>0.0</manhunterChance></li>
                                <li><creatureDef>Squirrel</creatureDef><weight>2</weight><manhunterChance>0.0</manhunterChance></li>
                            </creatures>
                        </li>
                        
                        <!-- Mid Stage: Small predators (25-60%) -->
                        <li>
                            <minInstability>0.25</minInstability>
                            <maxInstability>0.6</maxInstability>
                            <maxCreaturesSpawned>2</maxCreaturesSpawned>
                            <spawnIntervalHours>3</spawnIntervalHours>
                            <spawnChance>0.6</spawnChance>
                            <creatures>
                                <li><creatureDef>Fox_Red</creatureDef><weight>2</weight><manhunterChance>0.3</manhunterChance></li>
                                <li><creatureDef>Fox_Fennec</creatureDef><weight>1</weight><manhunterChance>0.2</manhunterChance></li>
                                <li><creatureDef>Warg</creatureDef><weight>1</weight><manhunterChance>0.5</manhunterChance></li>
                            </creatures>
                        </li>
                        
                        <!-- Late Stage: Dangerous predators (50-85%) -->
                        <li>
                            <minInstability>0.5</minInstability>
                            <maxInstability>0.85</maxInstability>
                            <maxCreaturesSpawned>3</maxCreaturesSpawned>
                            <spawnIntervalHours>2.5</spawnIntervalHours>
                            <spawnChance>0.7</spawnChance>
                            <creatures>
                                <li><creatureDef>Bear_Grizzly</creatureDef><weight>2</weight><manhunterChance>0.6</manhunterChance></li>
                                <li><creatureDef>Bear_Polar</creatureDef><weight>1</weight><manhunterChance>0.7</manhunterChance></li>
                                <li><creatureDef>Warg</creatureDef><weight>2</weight><manhunterChance>0.8</manhunterChance></li>
                            </creatures>
                        </li>
                        
                        <!-- Final Stage: Insectoid nightmare (75-100%) -->
                        <li>
                            <minInstability>0.75</minInstability>
                            <maxInstability>1.0</maxInstability>
                            <maxCreaturesSpawned>4</maxCreaturesSpawned>
                            <spawnIntervalHours>1.5</spawnIntervalHours>
                            <spawnChance>0.8</spawnChance>
                            <creatures>
                                <li><creatureDef>Megaspider</creatureDef><weight>3</weight><manhunterChance>0.9</manhunterChance></li>
                                <li><creatureDef>Spelopede</creatureDef><weight>2</weight><manhunterChance>0.8</manhunterChance></li>
                                <li><creatureDef>Megascarab</creatureDef><weight>2</weight><manhunterChance>0.7</manhunterChance></li>
                            </creatures>
                        </li>
                    </threatTiers>
                </li>
            </spawnConfigs>
        </li>
        </comps>
    </ThingDef>
</Defs>