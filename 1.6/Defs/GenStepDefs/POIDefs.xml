<Defs>

  <!-- INSECT HIVE ENCOUNTERS - Dangerous but rewarding -->
  <MiningOverhaul.SimplePOIDef>
    <defName>MO_InsectHiveEncounter</defName>
    <spawnChance>0.15</spawnChance>                      <!-- 15% chance per grid cell -->
    <minDistance>20</minDistance>                        <!-- Keep hives far apart -->
    <minDistanceFromEntrance>20</minDistanceFromEntrance> <!-- Don't spawn near entrance -->
    <nearbyRadius>4</nearbyRadius>
    <coreItems>
      <li><thingDef>Hive</thingDef><count>1~2</count></li>
      <li><pawnKindDef>Megascarab</pawnKindDef><count>1~4</count></li>
      <li><pawnKindDef>Spelopede</pawnKindDef><count>1~2</count></li>
    </coreItems>
    <nearbyItems>
      <li><thingDef>InsectJelly</thingDef><count>1~3</count><stackCount>5~15</stackCount></li>
      <li><thingDef>GlowPod</thingDef><count>1~3</count></li>
      <li><thingDef>Filth_Slime</thingDef><count>3~8</count></li>
    </nearbyItems>
  </MiningOverhaul.SimplePOIDef>

  <!-- PLANT CLUSTERS - Decorative vegetation -->
  <MiningOverhaul.SimplePOIDef>
    <defName>MO_PlantCluster</defName>
    <spawnChance>0.25</spawnChance>                      <!-- 25% chance per grid cell -->
    <minDistance>8</minDistance>                         <!-- Plants reasonably spaced -->
    <nearbyRadius>3</nearbyRadius>
    <coreItems>
      <li><thingDef>Plant_Grass</thingDef><count>5~10</count></li>
      <li><thingDef>Plant_Dandelion</thingDef><count>2~5</count></li>
    </coreItems>
    <nearbyItems>
      <li><thingDef>Plant_Rose</thingDef><count>1~2</count></li>
    </nearbyItems>
  </MiningOverhaul.SimplePOIDef>

  <!-- BRAMBLE THICKETS - Natural barriers -->
  <MiningOverhaul.SimplePOIDef>
    <defName>MO_BrambleThicket</defName>
    <spawnChance>0.20</spawnChance>                      <!-- 20% chance per grid cell -->
    <minDistance>12</minDistance>                        <!-- Thickets reasonably spaced -->
    <nearbyRadius>4</nearbyRadius>
    <coreItems>
      <li><thingDef>Plant_Brambles</thingDef><count>8~15</count></li>
    </coreItems>
    <nearbyItems>
      <li><thingDef>Plant_Brambles</thingDef><count>3~8</count></li>
    </nearbyItems>
  </MiningOverhaul.SimplePOIDef>

  <!-- RESOURCE CACHES - Valuable finds -->
  <MiningOverhaul.SimplePOIDef>
    <defName>MO_ResourceCache</defName>
    <spawnChance>0.10</spawnChance>                      <!-- 10% chance per grid cell -->
    <minDistance>15</minDistance>                        <!-- Keep caches spread out -->
    <nearbyRadius>2</nearbyRadius>
    <coreItems>
      <li><thingDef>ChunkSlagSteel</thingDef><count>2~4</count></li>
      <li><thingDef>Silver</thingDef><count>1~2</count><stackCount>15~35</stackCount></li>
    </coreItems>
    <nearbyItems>
      <li><thingDef>ComponentIndustrial</thingDef><count>1~3</count><stackCount>1~2</stackCount></li>
      <li><thingDef>ComponentSpacer</thingDef><count>1</count><stackCount>1</stackCount></li>
    </nearbyItems>
  </MiningOverhaul.SimplePOIDef>

  <!-- CREATURE LAIRS - Dangerous predator nests -->
  <MiningOverhaul.SimplePOIDef>
    <defName>MO_CreatureLair</defName>
    <spawnChance>0.08</spawnChance>                      <!-- 8% chance per grid cell -->
    <minDistance>25</minDistance>                        <!-- Keep lairs far apart -->
    <minDistanceFromEntrance>12</minDistanceFromEntrance> <!-- Don't spawn too close to entrance -->
    <nearbyRadius>4</nearbyRadius>
    <coreItems>
      <li><pawnKindDef>Warg</pawnKindDef><count>1~3</count></li>
      <li><pawnKindDef>Bear_Grizzly</pawnKindDef><count>1~2</count></li>
    </coreItems>
    <nearbyItems>
      <li><thingDef>Filth_Blood</thingDef><count>3~8</count></li>
      <li><thingDef>Meat_Human</thingDef><count>1~4</count><stackCount>5~15</stackCount></li>
    </nearbyItems>
  </MiningOverhaul.SimplePOIDef>

</Defs>