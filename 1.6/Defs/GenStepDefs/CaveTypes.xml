<Defs>
    <GenStepDef Name="CaveBase">
        <defName>CaveBase</defName>
        <order>200</order>
        <genStep Class="MiningOverhaul.GenStep_CaveShape" />
    </GenStepDef>

    <GenStepDef ParentName="CaveBase">
        <defName>CaveVegetationGenStep</defName>
        <genStep Class="MiningOverhaul.GenStep_CaveShape">
            <!-- Cave Generation Settings -->
            <minAutomataCycles>6</minAutomataCycles>
            <maxAutomataCycles>6</maxAutomataCycles>
            <initialAirChance>0.57</initialAirChance>
            <maxCaveDistancePath>13</maxCaveDistancePath>
            
            <!-- Natural Tunnel Settings (Simplified) -->
            <tunnelStyle>Chaotic</tunnelStyle>       <!-- Straight, Natural, Winding, or Chaotic -->
            <tunnelWidth>Wide</tunnelWidth>         <!-- Narrow, Mixed, Wide, or VeryWide -->
            
            <!-- Smoothing Settings -->
            <enableTunnelSmoothing>true</enableTunnelSmoothing>     <!-- Smooth tunnel edges only (recommended) -->
            <enableGlobalSmoothing>true</enableGlobalSmoothing>    <!-- Smooth entire cave (may look too uniform) -->
        </genStep>
    </GenStepDef>


    
</Defs>